<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="popupTextAlignment" format="enum">
        <enum name="start" value="0" />
        <enum name="end" value="1" />
        <enum name="center" value="2" />
    </attr>

    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrowDrawable" format="reference|color" />
        <!--        <attr name="dropDownListPaddingBottom" format="dimension" />-->
        <attr name="backgroundSelector" format="integer" />
        <attr name="textTint" format="color" />
        <attr name="popupTextAlignment" />
        <attr name="entries" format="reference" />

        <!--        PopupWindowList背景-->
        <attr name="popup_bg_color" format="reference" />
        <!--        PopupWindowList宽度-->
        <attr name="popup_width" format="dimension|reference" />
        <!--        PopupWindowList高度-->
        <attr name="popup_height" format="reference|dimension" />
        <!--        PopupWindowList 锚点控件垂直偏移量-->
        <attr name="popup_horizontal_offset" format="reference|dimension" />
        <!--        PopupWindowList 锚点控件水平偏移量-->
        <attr name="popup_vertical_offset" format="reference|dimension" />
        <!--        PopupWindowList 入场出场动画-->
        <attr name="popup_anim" format="reference" />
    </declare-styleable>
</resources>